-# coding: utf-8
#speakers
  %h1.title Speakers
  %p.desc
    Follow us on twitter to keep yourself up to date!

  %ul#list_of_speakers
    - Speaker.all.each do |speaker|
      %a{:id => speaker.links['twitter']}
      %li.speaker
        .summary
          .picture
            %img{:src => speaker.picture}
          %ul.links
            %li= twitter "@#{speaker.twitter}", speaker.twitter
            - speaker.links.each do |name, link|
              %li= link_to name, link

        .description
          %h1= speaker.name
          %h2
            from
            %span= speaker.company
          = simple_format(speaker.description_en)
        .clear
    
